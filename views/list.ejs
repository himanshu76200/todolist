<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title></title>
  <link rel="stylesheet" href="css/styles.css">
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
</head>

<body>

  <div class="box" id="heading">
    <h1><%= kindOfDay%></h1>
  </div>

  <div class="box">
    <% newListItems.forEach(function(item) { %>

    <form action="/delete" method="post">
      <div class="item">
        <input name="checkbox" value="<%= item._id%>" type="checkbox" onchange="this.form.submit()">
        <p><%= item.name %></p>
      </div>
      <input type="hidden" name="listName" value="<%= kindOfDay %>"></input>
    </form>
    <% }) %>

    <form class="item" action="/" method="post">
      <input autocomplete="off" placeholder="New Item" type="text" name="newItem">
      <button type="submit" name="list" value="<%= kindOfDay %>">+</button>
    </form>

  </div>

</body>

</html>
